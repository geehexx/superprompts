{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/cursor_rule_frontmatter.schema.json",
  "title": "Cursor Rule Frontmatter",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "description": { "type": "string", "minLength": 1 },
    "globs": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "alwaysApply": { "type": "boolean" }
  },
  "required": ["alwaysApply"],
  "allOf": [
    {
      "if": { "properties": { "alwaysApply": { "const": true } } },
      "then": {
        "properties": {
          "globs": { "maxItems": 0 },
          "description": { "maxLength": 0 }
        }
      }
    },
    {
      "if": { "properties": { "alwaysApply": { "const": false } } },
      "then": {
        "anyOf": [
          { "required": ["globs"], "not": { "required": ["description"] } },
          { "required": ["description"], "not": { "required": ["globs"] } }
        ]
      }
    }
  ]
}
